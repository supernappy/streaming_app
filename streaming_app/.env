# Database connection
DATABASE_URL=postgresql://walesolagbade@localhost:5432/openstream
REDIS_URL=redis://localhost:6379

# Server configuration
PORT=3001
NODE_ENV=development
API_BASE_URL=https://openstream-client-f3d9f2qbn-supernappys-projects.vercel.app

# JWT configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# MinIO/S3 configuration
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=openstream
MINIO_USE_SSL=false

# File upload configuration
UPLOAD_MAX_SIZE=100MB
ALLOWED_AUDIO_FORMATS=mp3,wav,flac,aac,ogg
UPLOAD_PATH=./uploads

# Media streaming configuration
MEDIA_BASE_URL=http://localhost:8081
HLS_SEGMENT_DURATION=10
HLS_PLAYLIST_SIZE=5

# FFmpeg configuration
FFMPEG_PATH=/usr/bin/ffmpeg
FFPROBE_PATH=/usr/bin/ffprobe

# Authentication configuration
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=6

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:19006

# External APIs (optional)
MUSIXMATCH_API_KEY=your-musixmatch-api-key
GENIUS_API_KEY=your-genius-api-key

# Email configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# WebRTC/LiveKit configuration (for live audio rooms)
LIVEKIT_URL=wss://your-livekit-server.com
LIVEKIT_API_KEY=your-livekit-api-key
LIVEKIT_SECRET=your-livekit-secret

# Analytics (optional)
POSTHOG_KEY=your-posthog-key
POSTHOG_HOST=https://app.posthog.com

# Monitoring
LOG_LEVEL=debug
