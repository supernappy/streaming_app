MEILISEARCH_KEY=your-meilisearch-key

# Social features
ENABLE_SOCIAL_FEATURES=true
ENABLE_COMMENTS=true
ENABLE_LIKES=true
ENABLE_FOLLOWS=true

# Content moderation
ENABLE_AUTO_MODERATION=false
PROFANITY_FILTER=true

# Subscription/Payment (optional)
