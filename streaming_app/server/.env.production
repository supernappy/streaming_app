# Production Environment Variables
# Copy these to your hosting platform's environment variables

# Database (use managed PostgreSQL)
DATABASE_URL=postgresql://username:password@host:port/database
REDIS_URL=redis://username:password@host:port
POSTGRES_URL=postgresql://username:password@host:port/database

# Server Configuration
PORT=3001
NODE_ENV=production
API_BASE_URL=https://your-api-domain.com

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-for-production
JWT_EXPIRES_IN=7d

# File Storage (use cloud storage)
MINIO_ENDPOINT=s3.amazonaws.com
MINIO_PORT=443
MINIO_ACCESS_KEY=your-aws-access-key
MINIO_SECRET_KEY=your-aws-secret-key
MINIO_BUCKET=openstream-production
MINIO_USE_SSL=true

# Media Configuration
MEDIA_BASE_URL=https://your-cdn-domain.com
UPLOAD_PATH=/tmp/uploads

# CORS Configuration
CORS_ORIGIN=https://your-frontend-domain.vercel.app,https://your-app-domain.com,http://localhost:3000,http://localhost:3002,http://localhost:3003

# External Services
FFMPEG_PATH=/usr/bin/ffmpeg
FFPROBE_PATH=/usr/bin/ffprobe

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Security
HELMET_ENABLED=true
BCRYPT_ROUNDS=12

# Optional Services
MUSIXMATCH_API_KEY=your-musixmatch-key
GENIUS_API_KEY=your-genius-key
STRIPE_SECRET_KEY=your-stripe-secret-key